<script type="text/ng-template" id="contenttypes/image.html">
    <div class="edit-content-preview" ng-show="ecVM.templateMode==='PREVIEW'">
        <img src="{{ecVM.contentTranslation.contentData.imageUrl}}" alt="{{ecVM.contentTranslation.contentData.imageAltText}}" />
    </div>
    <div ng-show="ecVM.templateMode==='EDITCONTENT'">
        <div class="modal-header">
            <h3 class="modal-title">Edit {{ecVM.typeInfo.type}}</h3>
        </div>
        <div class="modal-body">
            <div class="form-group" dev-language-selector selected-locale="ecVM.selectedLocale" change-language="ecVM.changeLanguage()" ng-show="ecVM.currentViewState===ecVM.viewStates.LIST"></div>

            <div class="form-group">
                <div dev-image-manager src="ecVM.contentTranslation.contentData.imageUrl" alt="ecVM.contentTranslation.contentData.imageAltText" focus-point="ecVM.contentTranslation.contentData.focusPoint"></div>
            </div>  

        </div>
        <div class="modal-footer">
            <div>
                <button class="btn btn-primary" type="button" ng-click="ecVM.save()" ng-disabled="ecVM.isDetailView">Save</button>
                <button class="btn btn-warning" type="button" ng-click="ecVM.cancel()" ng-disabled="ecVM.isDetailView">Cancel</button>
            </div>
        </div>
    </div>
</script>
    
