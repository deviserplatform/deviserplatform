@{
    ViewData["Title"] = "Index";
    //Layout = "~/_Layout.cshtml";
}

<div ng-app="deviser.securityRoles" ng-controller="SecurityRolesCtrl as srVM">

    <div class="alert alert-dismissable" ng-class="{'alert-danger':srVM.message.messageType=='error',
                              'alert-info':srVM.message.messageType=='info',
                              'alert-success':srVM.message.messageType=='success',
                              'alert-warning':srVM.message.messageType=='warning'}" role="alert" ng-show="srVM.message.messageType">
        {{srVM.message.content}}
    </div>

    <div class="row" ng-show="srVM.currentViewState == srVM.viewStates.LIST">
        <div class="col-md-12">
            <div class="portlet box blue" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-users"></i> Security Roles
                    </div>
                </div>
                <div class="portlet-body form">
                    <form action="#" class="form-horizontal" id="submit_form" method="POST">

                        <div class="form-body">
                            <div class="table-toolbar">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            <a class="btn btn-success" ng-click="srVM.add()"> New role <i class="fa fa-plus"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-advance table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                Role Name
                                            </th>
                                            <th>Edit
                                            </th>
                                            <th>Delete
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="role in srVM.roles">
                                            <td>
                                                {{role.name}}
                                            </td>
                                            <td>
                                                <a href="" class="btn btn-default btn-xs" ng-click="srVM.edit(role)">
                                                    <i class="fa fa-edit"></i> Edit
                                                </a>
                                            </td>
                                            <td>
                                                <a href="" class="btn btn-default btn-xs" ng-click="srVM.remove(role)">
                                                    <i class="fa fa-trash-o"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-show="srVM.currentViewState == srVM.viewStates.EDIT">
        <div class="col-md-12">
            <div class="portlet box blue" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-users"></i> Edit role
                    </div>
                </div>
                <div class="portlet-body form">
                    <form class="form-horizontal" name="editRoleForm">
                        <div class="form-body">
                            <div class="form-group" ng-class="{'has-error':srVM.hasError(editRoleForm, 'name', 'required')}">
                                <label class="col-md-3 control-label">Role Name<span class="required" aria-required="true">*</span></label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" placeholder="Enter role name" name="name" ng-model="srVM.selectedRole.name" required>
                                    <p class="help-block" ng-show="srVM.hasError(editRoleForm, 'name', 'required')">
                                        Role name is required.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn btn-success" ng-click="srVM.save()">Submit</button>
                                    <button type="button" class="btn btn-default" ng-click="srVM.cancel()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-show="srVM.currentViewState == srVM.viewStates.NEW">
        <div class="col-md-12">
            <div class="portlet box blue" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-user"></i> Add new role
                    </div>
                </div>
                <div class="portlet-body form">
                    <form class="form-horizontal" name="roleForm" novalidate>
                        <div class="form-body">
                            <div class="form-group" ng-class="{'has-error':srVM.hasError(roleForm, 'name', 'required')}">
                                <label class="col-md-3 control-label">Role Name<span class="required" aria-required="true">*</span></label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" placeholder="Enter first name" name="name" ng-model="srVM.newRole.name" required>
                                    <p class="help-block" ng-show="srVM.hasError(roleForm, 'name', 'required')">
                                        Role name is required.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn btn-success" ng-click="srVM.save()">Submit</button>
                                    <button type="button" class="btn btn-default" ng-click="srVM.cancel()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>