<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <SpaRoot>wwwroot\Admin</SpaRoot>
    <DefaultItemExcludes>$(DefaultItemExcludes);$(SpaRoot)node_modules\**</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="2.2.0" />
    <PackageReference Include="Microsoft.NET.Sdk.Razor" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Deviser.Admin\Deviser.Admin.csproj" />
    <ProjectReference Include="..\Deviser.ClientDependency\Deviser.ClientDependency.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!--<Folder Include="wwwroot\Admin\" />-->
    <None Include="$(SpaRoot)\**" />
    <Content Remove="$(SpaRoot)\node_modules\**" />
    <None Remove="$(SpaRoot)\node_modules\**" />
    <Compile Remove="$(SpaRoot)\node_modules\**" />
      
    <!--<EmbeddedResource Include="$(SpaRoot)\src\**\*" />-->
    <EmbeddedResource Remove="$(SpaRoot)\node_modules\**" />
    <EmbeddedResource Remove="wwwroot\Admin\node_modules\**" />
    <EmbeddedResource Include="$(SpaRoot)\dist\**\*" />
    
    <Content Update="**\*.cshtml" Pack="false" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Views\_ViewImports.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
    </Content>
  </ItemGroup>
</Project>
