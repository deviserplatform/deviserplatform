@using Deviser.Core.Library.TagHelpers;
@inject IScopeService scopeService
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var currentPage = scopeService.PageContext.CurrentPage;
}


@*<link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />*@
<require dependency-type="Css" include="Development" priority="10" file-path="~/_content/Deviser.Web/lib/font-awesome/css/font-awesome.css" test="test"></require>
<require dependency-type="Css" include="Development" priority="11" file-path="~/_content/Deviser.Web/lib/angular-ui-tree/dist/angular-ui-tree.min.css" test="test"></require>
<require dependency-type="Css" include="Development" priority="12" file-path="~/_content/Deviser.Web/lib/angular-ui-select/dist/select.css" test="test"></require>
<require dependency-type="Css" include="Development" priority="14" file-path="~/_content/Deviser.Web/lib/textAngular/dist/textAngular.css" test="test"></require>
<require dependency-type="Css" include="Development" priority="15" file-path="~/_content/Deviser.Web/css/admin/admin.css" test="test"></require>
<require dependency-type="Css" include="Development" priority="16" file-path="//cdnjs.cloudflare.com/ajax/libs/overlayscrollbars/1.7.0/css/OverlayScrollbars.min.css" test="test"></require>
<!-- END GLOBAL MANDATORY STYLES -->

<require dependency-type="Script" include="Development" location="Head" priority="10" file-path="~/_content/Deviser.Web/lib/jquery/dist/jquery.js" test="test"></require>
<require dependency-type="Script" include="Development" location="Head" priority="11" file-path="~/_content/Deviser.Web/lib/jquery-ui/jquery-ui.js"></require>
<require dependency-type="Script" include="Development" location="Head" priority="12" file-path="~/_content/Deviser.Web/js/moment.js"></require>
<require dependency-type="Script" include="Development" location="Head" priority="13" file-path="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></require>
<require dependency-type="Script" include="Development" location="Head" priority="13" file-path="//stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></require>
<require dependency-type="Script" include="Development" location="Head" priority="14" file-path="~/_content/Deviser.Web/lib/lodash/dist/lodash.js"></require>
<require dependency-type="Script" include="Development" location="Head" priority="15" file-path="~/_content/Deviser.Web/js/metisMenu.min.js"></require>
<require dependency-type="Script" include="Development" priority="16" file-path="~/_content/Deviser.Web/lib/aspnet/signalr/dist/browser/signalr.min.js"></require>
<require dependency-type="Script" include="Development" priority="17" file-path="//cdnjs.cloudflare.com/ajax/libs/overlayscrollbars/1.7.0/js/jquery.overlayScrollbars.min.js"></require>

<require dependency-type="Script" include="Development" priority="31" file-path="~/_content/Deviser.Web/js/src/app/dev-form-helper.js"></require>
<require dependency-type="Script" include="Development" priority="32" file-path="~/_content/Deviser.Web/js/admin/main.js"></require>


@await Component.InvokeAsync("ControlBar")
<div class="admin-wrapper">

    <div class="admin-sidebar overlay-scroll">

        <nav class="sidebar-nav">
            <ul class="metismenu" id="side-menu" dev-nav="AdminBS4" dev-nav-page="SystemOnly"></ul>
        </nav>

    </div>
    <div class="admin-body">
        <div class="admin-content">
            <section class="content-header">
                <h1 class="page-header">@currentPage.PageTranslation.First().Title</h1>
            </section>
            <section class="content-body container-fluid">
                @RenderBody()
            </section>
        </div>
        <footer class="admin-footer container-fluid">
            <div class="copyright text-center my-auto">
                <p>
                    Copyright &copy; @DateTime.Now.Year Karthick Sundararajan. Released on <a href="https://github.com/deviserplatform/deviserplatform" title="Source" target="_blank"> <i class="fa fa-github"></i></a>
                    under the <a href="/install/License" title="License" target="_blank">MIT License</a>
                </p>
            </div>
        </footer>
    </div>
</div>