@inject IScopeService scopeService
@{
    if (ViewBag.Theme != null)
    {
        Layout = "~/Sites/Default/Themes/Skyline/LayoutDesigner.cshtml";
    }
    var currentPage = scopeService.PageContext.CurrentPage;
    ViewBag.BodyClass += "edit-layout-container page-edit";
}

<script type="text/javascript">
    (function () {
        var pageContext =  @Html.Raw(SDJsonConvert.SerializeObject(scopeService.PageContext));
        pageContext.isEmbedded = true;
        pageContext.assetPath = '/_content/Deviser.Web/ClientApp/';
        window.pageContext = pageContext;
    }());
</script>

<app-root initial-view="edit"></app-root>

<require dependency-type="Script" priority="111" file-path="/_content/Deviser.Web/ClientApp/runtime.js" type="module"></require>
<require dependency-type="Script" priority="113" file-path="/_content/Deviser.Web/ClientApp/polyfills.js" type="module"></require>
<require dependency-type="Script" priority="117" file-path="/_content/Deviser.Web/ClientApp/main.js" type="module"></require>