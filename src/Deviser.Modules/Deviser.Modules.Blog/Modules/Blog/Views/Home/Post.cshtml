@using Deviser.Core.Common.DomainTypes
@using Newtonsoft.Json
@model Deviser.Modules.Blog.Models.Post

@{
    ViewData["Title"] = "Index";
    Layout = "~/Sites/Default/Themes/Skyline/ModuleDefault.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text"><small class="text-muted">@Model.CreatedOn.ToString("MMM dd, yyyy") | @Model.CreatedBy</small></p>
            <p class="card-text">@Html.Raw(Model.Content)</p>
        </div>
    </div>
</div>
