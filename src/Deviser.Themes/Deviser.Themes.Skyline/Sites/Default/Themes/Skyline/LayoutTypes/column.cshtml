@model LayoutContent
@{
    var properties = Model.PlaceHolder.Properties;

    var colWidthXS = properties.Get("column_width_xs")?.ToString(false);
    var colWidthS = properties.Get("column_width_s")?.ToString(false);
    var colWidthM = properties.Get("column_width")?.ToString(false);
    var colWidthL = properties.Get("column_width_l")?.ToString(false);
    var colWidthXL = properties.Get("column_width_xl")?.ToString(false);

    if (string.IsNullOrEmpty(colWidthM))
    {
        colWidthM = "col-md-4";
    } 
}
<div class="@colWidthXS @colWidthS @colWidthM @colWidthL @colWidthXL @properties.Get("css_class")">
    @*@Html.Raw(Model.ContentResult)*@
    @Model.ContentResult
</div>