@model Deviser.Core.Common.DomainTypes.DynamicContent
@inject IScopeService scopeService
@{
    var pageContext = scopeService.PageContext;
    var currentCulture = pageContext.CurrentCulture.ToString();
    var properties = Model.PageContent.Properties;

    var rootObj = Model.Content;
    var cssClass = properties.Get("css_class")?.ToString();

}

@if (rootObj != null)
{
    var image = (rootObj.image as Newtonsoft.Json.Linq.JObject).ToObject<Image>();
    <img class="@cssClass" src="/@image.ImageUrl" alt="@image.ImageAltText"/>
}
else{
    <div>
        Please enter the content
    </div>
}